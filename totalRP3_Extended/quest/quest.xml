	<!-- NPC tooltip -->
	<GameTooltip name="TRP3_NPCTooltip" frameStrata="TOOLTIP" parent="UIParent" inherits="GameTooltipTemplate">
		<Scripts>
			<OnHide>
				self.isFading = nil;
			</OnHide>
		</Scripts>
	</GameTooltip>

	<!-- *_*_*_*_*_*_*_*_*_*  -->
	<!--     CAMPAIGNS TAB    -->
	<!-- *_*_*_*_*_*_*_*_*_*  -->

	<Button name="TRP3_CampaignButtonTemplate" virtual="true">
		<Size x="174" y="96"/>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture name="$parentbgImage" parentKey="bgImage">
					<Anchors>
						<Anchor point="TOPLEFT" x="3" y="-3"/>
						<Anchor point="BOTTOMRIGHT" x="-3" y="3"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="BORDER">
				<Texture name="$parentIcon" parentKey="Icon">
					<Size x="60" y="60"/>
					<Anchors>
						<Anchor point="CENTER" x="0" y="0"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="OVERLAY">
				<FontString name="$parentName" inherits="QuestTitleFontBlackShadow" parentKey="name" text="TEXT">
					<Size x="150" y="0"/>
					<Anchors>
						<Anchor point="TOP" x="0" y="-15"/>
					</Anchors>
				</FontString>
				<FontString name="$parentRange" inherits="GameFontNormal" justifyH="LEFT" parentKey="range" text="[LVL]">
					<Size x="100" y="12"/>
					<Anchors>
						<Anchor point="BOTTOMLEFT" x="7" y="7"/>
					</Anchors>
				</FontString>
				<FontString name="$parentCurrent" inherits="GameFontNormal" justifyH="RIGHT" parentKey="current" text="[CURRENT]">
					<Size x="125" y="12"/>
					<Anchors>
						<Anchor point="BOTTOMRIGHT" x="-7" y="7"/>
					</Anchors>
					<Color r="0" g="0.95" b="0"/>
				</FontString>
			</Layer>
		</Layers>
		<NormalTexture file="Interface\EncounterJournal\UI-EncounterJournalTextures">
			<Size x="174" y="96"/>
			<TexCoords left="0.00195313" right="0.34179688" top="0.42871094" bottom="0.52246094"/>
		</NormalTexture>
		<PushedTexture file="Interface\EncounterJournal\UI-EncounterJournalTextures" virtual="true" >
			<Size x="174" y="96"/>
			<TexCoords left="0.00195313" right="0.34179688" top="0.33300781" bottom="0.42675781"/>
		</PushedTexture>
		<HighlightTexture file="Interface\EncounterJournal\UI-EncounterJournalTextures" virtual="true" >
			<Size x="174" y="96"/>
			<TexCoords left="0.34570313" right="0.68554688" top="0.33300781" bottom="0.42675781"/>
		</HighlightTexture>
		<Scripts>
			<OnEnter>
				TRP3_RefreshTooltipForFrame(self);
			</OnEnter>
			<OnLeave>
				TRP3_MainTooltip:Hide();
			</OnLeave>
		</Scripts>
	</Button>

	<Frame name="TRP3_CampaignPageTemplate" inherits="TRP3_FieldSetFrame" virtual="true">
		<Frames>
			<ScrollFrame name="$parentScrollFrame" parentKey="scroll" inherits="UIPanelScrollFrameCodeTemplate">
				<Anchors>
					<Anchor point="TOP" x="0" y="-10"/>
					<Anchor point="RIGHT" x="-10" y="0"/>
					<Anchor point="LEFT" x="10" y="0"/>
					<Anchor point="BOTTOM" x="0" y="10"/>
				</Anchors>
				<Layers>
					<Layer level="OVERLAY">
						<FontString inherits="GameFontNormalLarge" justifyH="CENTER" justifyV="MIDDLE" parentKey="empty" text="No campaign yet, patience ! ;)" setAllPoints="true"/>
					</Layer>
				</Layers>
				<Frames>
					<Slider name="$parentScrollBar" inherits="MinimalScrollBarTemplate" parentKey="ScrollBar">
						<Anchors>
							<Anchor point="TOPRIGHT" x="0" y="-17"/>
							<Anchor point="BOTTOMRIGHT" x="0" y="17"/>
						</Anchors>
						<Scripts>
							<OnLoad>
								self.trackBG:SetVertexColor(0.2, 0.13, 0.08, 0.25);
							</OnLoad>
						</Scripts>
					</Slider>
				</Frames>
				<ScrollChild>
					<Frame name="$parentScrollChild" parentKey="child">
						<Size x="10" y="10"/>
						<Anchors>
							<Anchor point="TOPLEFT" x="0" y="0"/>
						</Anchors>
						<Frames>
							<Button name="$parentSlot1" inherits="TRP3_CampaignButtonTemplate" parentKey="Slot1">
								<Anchors>
									<Anchor point="TOPLEFT" x="12" y="-10"/>
								</Anchors>
							</Button>
						</Frames>
					</Frame>
				</ScrollChild>
			</ScrollFrame>
		</Frames>
	</Frame>

	<!-- *_*_*_*_*_*_*_*_*_*  -->
	<!--      QUESTS TAB      -->
	<!-- *_*_*_*_*_*_*_*_*_*  -->

	<Button name="TRP3_QuestButtonTemplate" virtual="true">
		<Size x="37" y="37"/>

		<Layers>
			<Layer level="BACKGROUND">
				<Texture parentKey="EmptySlot" inherits="Spellbook-EmptySlot">
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="BORDER">
				<Texture parentKey="Icon">
					<Size x="36" y="36"/>
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="OVERLAY">
				<Texture parentKey="ActiveTexture" inherits="Spellbook-SlotFrame">
					<Anchors>
						<Anchor point="CENTER" x="1.5"/>
					</Anchors>
				</Texture>
				<Texture parentKey="FutureTexture" inherits="Spellbook-UnlearnedSlot" hidden="true">
					<Anchors>
						<Anchor point="CENTER" x="1.5" y="-3"/>
					</Anchors>
				</Texture>
				<FontString parentKey="Name" inherits="SystemFont_Large" justifyH="LEFT" text="[TEXT_NAME]">
					<Size x="300" y="0"/>
					<Anchors>
						<Anchor point="TOPLEFT" relativePoint="TOPRIGHT" x="15" y="-4"/>
					</Anchors>
					<Color r="0.95" g="0.95" b="0.95"/>
				</FontString>
				<FontString parentKey="InfoText" inherits="SystemFont_Med1" maxLines="2" justifyH="LEFT" justifyV="TOP" text="[TEXT_DESCRIPTION]">
					<Size x="360" y="0"/>
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.Name" relativePoint="BOTTOMLEFT" x="0" y="-1"/>
					</Anchors>
					<Color r="0.95" g="0.95" b="0.95"/>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnEnter>
				TRP3_RefreshTooltipForFrame(self);
				self.Name:SetTextColor(0.95, 0.65, 0);
			</OnEnter>
			<OnLeave>
				TRP3_MainTooltip:Hide();
				self.Name:SetTextColor(0.95, 0.95, 0.95);
			</OnLeave>
		</Scripts>
		<PushedTexture file="Interface\Buttons\UI-Quickslot-Depress"/>
		<HighlightTexture file="Interface\Buttons\ButtonHilight-Square" alphaMode="ADD" parentKey="highlightTexture"/>
	</Button>

	<Frame name="TRP3_QuestPageTemplate" virtual="true">
		<Frames>

			<Frame name="$parentCampaign" parentKey="Campaign" inherits="TRP3_FieldSetFrame">
				<Size x="0" y="120"/>
				<Anchors>
					<Anchor point="TOP" x="0" y="0"/>
					<Anchor point="RIGHT" x="0" y="0"/>
					<Anchor point="LEFT" x="0" y="0"/>
				</Anchors>
				<Frames>
					<Button name="$parentVignette" parentKey="Vignette" inherits="TRP3_CampaignButtonTemplate">
						<Anchors>
							<Anchor point="LEFT" x="10" y="0"/>
						</Anchors>
					</Button>

					<Frame parentKey="Text" name="$parentText" virtual="true">
						<Anchors>
							<Anchor point="LEFT" relativePoint="RIGHT" relativeKey="$parent.Vignette" x="5" y="0"/>
							<Anchor point="TOP" x="0" y="-10"/>
							<Anchor point="RIGHT" x="-40" y="0"/>
							<Anchor point="BOTTOM" x="0" y="10"/>
						</Anchors>
						<Layers>
							<Layer level="BACKGROUND">
								<Texture parentKey="bg" atlas="adventureguide-pane-small"/>
							</Layer>
						</Layers>
						<Frames>
							<ScrollFrame name="$parentScrollFrame" parentKey="scroll" inherits="UIPanelScrollFrameCodeTemplate">
								<Anchors>
									<Anchor point="TOP" x="0" y="-15"/>
									<Anchor point="RIGHT" x="25" y="0"/>
									<Anchor point="LEFT" x="30" y="0"/>
									<Anchor point="BOTTOM" x="0" y="10"/>
								</Anchors>
								<Frames>
									<Slider name="$parentScrollBar" inherits="MinimalScrollBarTemplate" parentKey="ScrollBar">
										<Anchors>
											<Anchor point="TOPRIGHT" x="0" y="-17"/>
											<Anchor point="BOTTOMRIGHT" x="0" y="17"/>
										</Anchors>
										<Scripts>
											<OnLoad>
												self.trackBG:SetVertexColor(0.2, 0.13, 0.08, 0.25);
											</OnLoad>
										</Scripts>
									</Slider>
								</Frames>
								<ScrollChild>
									<Frame name="$parentScrollChild" parentKey="child">
										<Size x="10" y="10"/>
										<Anchors>
											<Anchor point="TOPLEFT" x="0" y="0"/>
										</Anchors>
										<Frames>
											<Frame parentKey="Desc" name="$parentDesc">
												<Size x="10" y="10"/>
												<Anchors>
													<Anchor point="TOPLEFT" x="0" y="0"/>
												</Anchors>
												<Layers>
													<Layer level="OVERLAY">
														<FontString name="$parentText" font="SystemFont_Med1" justifyH="CENTER" justifyV="TOP" wordwrap="true" parentKey="Text">
															<Size x="230" y="0"/>
															<Anchors>
																<Anchor point="TOPLEFT" x="0" y="0"/>
															</Anchors>
															<Color r="0.2824" g="0.0157" b="0.0157"/>
														</FontString>
													</Layer>
												</Layers>
											</Frame>
										</Frames>
									</Frame>
								</ScrollChild>
							</ScrollFrame>
						</Frames>
					</Frame>

				</Frames>
			</Frame>

			<Frame name="$parentList" parentKey="List" inherits="TRP3_FieldSetFrame">
				<Size x="0" y="120"/>
				<Anchors>
					<Anchor point="TOP" relativePoint="BOTTOM" relativeKey="$parent.Campaign" x="0" y="-5"/>
					<Anchor point="RIGHT" x="0" y="0"/>
					<Anchor point="LEFT" x="0" y="0"/>
					<Anchor point="BOTTOM" x="0" y="0"/>
				</Anchors>
				<Layers>
					<Layer>
						<FontString parentKey="Empty" inherits="SystemFont_Med1" justifyH="CENTER" justifyV="MIDDLE" text="[EMPTY]" setAllPoints="true">
							<Anchors>
								<Anchor point="CENTER" x="0" y="0"/>
							</Anchors>
							<Color r="0.95" g="0.95" b="0.95"/>
						</FontString>
					</Layer>
				</Layers>
				<Frames>
					<ScrollFrame name="$parentScrollFrame" parentKey="scroll" inherits="UIPanelScrollFrameCodeTemplate">
						<Anchors>
							<Anchor point="TOP" x="0" y="-10"/>
							<Anchor point="RIGHT" x="-10" y="0"/>
							<Anchor point="LEFT" x="10" y="0"/>
							<Anchor point="BOTTOM" x="0" y="10"/>
						</Anchors>
						<Frames>
							<Slider name="$parentScrollBar" inherits="MinimalScrollBarTemplate" parentKey="ScrollBar">
								<Anchors>
									<Anchor point="TOPRIGHT" x="0" y="-17"/>
									<Anchor point="BOTTOMRIGHT" x="0" y="17"/>
								</Anchors>
								<Scripts>
									<OnLoad>
										self.trackBG:SetVertexColor(0.2, 0.13, 0.08, 0.25);
									</OnLoad>
								</Scripts>
							</Slider>
						</Frames>
						<ScrollChild>
							<Frame name="$parentScrollChild" parentKey="child">
								<Size x="10" y="10"/>
								<Anchors>
									<Anchor point="TOPLEFT" x="0" y="0"/>
								</Anchors>
								<Frames>
									<Frame parentKey="Content" name="$parentContent">
										<Size x="10" y="10"/>
										<Anchors>
											<Anchor point="TOPLEFT" x="0" y="0"/>
										</Anchors>
										<Layers>
											<Layer level="OVERLAY">
												<FontString inherits="SystemFont_Large" justifyH="LEFT" parentKey="Current">
													<Size x="0" y="50"/>
													<Anchors>
														<Anchor point="TOPLEFT" x="30" y="0"/>
													</Anchors>
													<Color r="0.95" g="0.95" b="0.95"/>
												</FontString>
												<FontString inherits="SystemFont_Large" justifyH="LEFT" parentKey="Finished">
													<Size x="0" y="50"/>
													<Anchors>
														<Anchor point="TOPLEFT" x="30" y="0"/>
													</Anchors>
													<Color r="0.95" g="0.95" b="0.95"/>
												</FontString>
											</Layer>
										</Layers>
									</Frame>
								</Frames>
							</Frame>
						</ScrollChild>
					</ScrollFrame>
				</Frames>
			</Frame>
		</Frames>
	</Frame>

	<!-- *_*_*_*_*_*_*_*_*_*  -->
	<!--      STEPS TAB       -->
	<!-- *_*_*_*_*_*_*_*_*_*  -->

	<Frame name="TRP3_StepPageTemplate" virtual="true">
		<Frames>

			<Button name="$parentTitle" parentKey="Title" inherits="TRP3_QuestButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" x="50" y="5"/>
				</Anchors>
			</Button>

			<Frame name="$parentObjectives" parentKey="Objectives" inherits="TRP3_FieldSetFrame">
				<Anchors>
					<Anchor point="TOP" relativeKey="$parent.Title" relativePoint="BOTTOM" x="0" y="-30"/>
					<Anchor point="RIGHT" x="0" y="0"/>
					<Anchor point="LEFT" x="0" y="0"/>
					<Anchor point="BOTTOM" x="0" y="0"/>
				</Anchors>
				<Frames>
					<Frame parentKey="Text" name="$parentText" virtual="true">
						<Anchors>
							<Anchor point="LEFT" x="10" y="0"/>
							<Anchor point="TOP" x="0" y="-10"/>
							<Anchor point="RIGHT" x="-40" y="0"/>
							<Anchor point="BOTTOM" x="0" y="10"/>
						</Anchors>
						<Layers>
							<Layer level="BACKGROUND">
								<Texture parentKey="bg" atlas="adventureguide-pane-small"/>
							</Layer>
						</Layers>
						<Frames>
							<ScrollFrame name="$parentScrollFrame" parentKey="scroll" inherits="UIPanelScrollFrameCodeTemplate">
								<Anchors>
									<Anchor point="TOP" x="0" y="-35"/>
									<Anchor point="RIGHT" x="25" y="0"/>
									<Anchor point="LEFT" x="40" y="0"/>
									<Anchor point="BOTTOM" x="0" y="35"/>
								</Anchors>
								<Frames>
									<Slider name="$parentScrollBar" inherits="MinimalScrollBarTemplate" parentKey="ScrollBar">
										<Anchors>
											<Anchor point="TOPRIGHT" x="0" y="-17"/>
											<Anchor point="BOTTOMRIGHT" x="0" y="17"/>
										</Anchors>
										<Scripts>
											<OnLoad>
												self.trackBG:SetVertexColor(0.2, 0.13, 0.08, 0.25);
											</OnLoad>
										</Scripts>
									</Slider>
								</Frames>
								<ScrollChild>
									<Frame name="$parentScrollChild" parentKey="child">
										<Size x="10" y="10"/>
										<Anchors>
											<Anchor point="TOPLEFT" x="0" y="0"/>
										</Anchors>
										<Frames>
											<SimpleHTML name="$parentHTML" parentKey="HTML">
												<Anchors>
													<Anchor point="TOPLEFT" x="5" y="-5"/>
												</Anchors>
												<FontString inherits="GameFontNormalSmall"/>
											</SimpleHTML>
										</Frames>
									</Frame>
								</ScrollChild>
							</ScrollFrame>
						</Frames>
					</Frame>
				</Frames>
			</Frame>
		</Frames>
	</Frame>

	<!-- *_*_*_*_*_*_*_*_*_*  -->
	<!--       QUESTLOG       -->
	<!-- *_*_*_*_*_*_*_*_*_*  -->

	<Frame name="TRP3_QuestLogPage" hidden="true">
		<Backdrop edgeFile="Interface\GLUES\COMMON\TextPanel-Border" tile="true">
			<EdgeSize><AbsValue val="24"/></EdgeSize>
			<BackgroundInsets left="5" right="5" top="5" bottom="5"/>
			<TileSize val="425"/>
		</Backdrop>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture file="Interface\SPELLBOOK\Spellbook-Page-1">
					<Anchors>
						<Anchor point="TOPRIGHT" x="0" y="0"/>
						<Anchor point="BOTTOMRIGHT" x="0" y="0"/>
						<Anchor point="LEFT" x="0" y="0"/>
					</Anchors>
					<TexCoords left="0.07" right="1" top="0" bottom="0.96"/>
				</Texture>
			</Layer>
		</Layers>

		<Frames>

			<Frame name="$parentNavBar" inherits="NavBarTemplate" parentKey="navBar">
				<Size x="0" y="34"/>
				<Anchors>
					<Anchor point="TOPLEFT" x="20" y="-10"/>
					<Anchor point="TOPRIGHT" x="-20" y="-10"/>
				</Anchors>
				<Layers>
					<Layer level="BORDER" textureSubLevel="-5">
						<Texture name="$parentInsetBotLeftCorner" inherits="UI-Frame-InnerBotLeftCorner" parentKey="InsetBorderBottomLeft">
							<Anchors>
								<Anchor point="BOTTOMLEFT"  x="-3" y="-3"/>
							</Anchors>
						</Texture>
						<Texture name="$parentInsetBotRightCorner" inherits="UI-Frame-InnerBotRight" parentKey="InsetBorderBottomRight">
							<Anchors>
								<Anchor point="BOTTOMRIGHT"  x="3" y="-3"/>
							</Anchors>
						</Texture>
						<Texture name="$parentInsetBottomBorder" inherits="_UI-Frame-InnerBotTile" parentKey="InsetBorderBottom">
							<Anchors>
								<Anchor point="BOTTOMLEFT" relativeTo="$parentInsetBotLeftCorner" relativePoint="BOTTOMRIGHT"/>
								<Anchor point="BOTTOMRIGHT" relativeTo="$parentInsetBotRightCorner" relativePoint="BOTTOMLEFT"/>
							</Anchors>
						</Texture>
						<Texture name="$parentInsetLeftBorder" inherits="!UI-Frame-InnerLeftTile" parentKey="InsetBorderLeft">
							<Anchors>
								<Anchor point="TOPLEFT" x="-3" y="0"/>
								<Anchor point="BOTTOMLEFT" relativeTo="$parentInsetBotLeftCorner" relativePoint="TOPLEFT"/>
							</Anchors>
						</Texture>
						<Texture name="$parentInsetRightBorder" inherits="!UI-Frame-InnerRightTile" parentKey="InsetBorderRight">
							<Anchors>
								<Anchor point="TOPRIGHT"  x="3" y="0"/>
								<Anchor point="BOTTOMRIGHT" relativeTo="$parentInsetBotRightCorner" relativePoint="TOPRIGHT"/>
							</Anchors>
						</Texture>
					</Layer>
				</Layers>
			</Frame>

			<Frame parentKey="Campaign" name="$parentCampaign" inherits="TRP3_CampaignPageTemplate">
				<Anchors>
					<Anchor point="TOP" relativeKey="$parent.navBar" relativePoint="BOTTOM" x="0" y="-18"/>
					<Anchor point="RIGHT" x="-10" y="0"/>
					<Anchor point="LEFT" x="10" y="0"/>
					<Anchor point="BOTTOM" x="0" y="10"/>
				</Anchors>
			</Frame>

			<Frame parentKey="Quest" name="$parentQuest" inherits="TRP3_QuestPageTemplate">
				<Anchors>
					<Anchor point="TOP" relativeKey="$parent.navBar" relativePoint="BOTTOM" x="0" y="-18"/>
					<Anchor point="RIGHT" x="-10" y="0"/>
					<Anchor point="LEFT" x="10" y="0"/>
					<Anchor point="BOTTOM" x="0" y="10"/>
				</Anchors>
			</Frame>

			<Frame parentKey="Step" name="$parentStep" inherits="TRP3_StepPageTemplate">
				<Anchors>
					<Anchor point="TOP" relativeKey="$parent.navBar" relativePoint="BOTTOM" x="0" y="-18"/>
					<Anchor point="RIGHT" x="-10" y="0"/>
					<Anchor point="LEFT" x="10" y="0"/>
					<Anchor point="BOTTOM" x="0" y="10"/>
				</Anchors>
			</Frame>

		</Frames>
	</Frame>

	<Script file="db.lua"/>
	<Script file="quest_effects.lua"/>
	<Script file="campaign_npc.lua"/>
	<Script file="campaign.lua"/>
	<Script file="quest.lua"/>
	<Script file="quest_log.lua"/>

</Ui>