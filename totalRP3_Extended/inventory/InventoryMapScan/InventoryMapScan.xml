	<Script file="StashMapPin.lua" />
	<Script file="DropMapPin.lua" />
	<Script file="InventoryMapScanner.lua" />

	<Frame name="TRP3_StashMapPinTemplate" inherits="BaseHighlightableMapPoiPinTemplate" mixin="TRP3_StashMapPinMixin" virtual="true">
		<Animations>
			<AnimationGroup parentKey="Bounce" setToFinalAlpha="true">
				<Alpha toAlpha="1" fromAlpha="0" duration="0.2"/>
				<Scale scaleX="1.5" scaleY="1.5" duration="0.2"/>
				<Scale scaleX="0.5" scaleY="0.5" duration="0.2" startDelay="0.2"/>
			</AnimationGroup>
		</Animations>
	</Frame>

	<Frame name="TRP3_DropMapPinTemplate" inherits="BaseHighlightableMapPoiPinTemplate" mixin="TRP3_DropMapPinMixin" virtual="true">
		<Animations>
			<AnimationGroup parentKey="Bounce" setToFinalAlpha="true">
				<Alpha toAlpha="1" fromAlpha="0" duration="0.2"/>
				<Scale scaleX="1.5" scaleY="1.5" duration="0.2"/>
				<Scale scaleX="0.5" scaleY="0.5" duration="0.2" startDelay="0.2"/>
			</AnimationGroup>
		</Animations>
	</Frame>

</Ui>