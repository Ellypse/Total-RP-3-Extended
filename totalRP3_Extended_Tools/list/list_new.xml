	<!-- *_*_*_*_*_*_*_*_*_*  -->
	<!--     Line template      -->
	<!-- *_*_*_*_*_*_*_*_*_*  -->

	<Frame name="TRP3_Tools_ListLineTemplate" virtual="true">
		<Size x="0" y="30" />
		<Anchors>
			<Anchor point="RIGHT" x="-20" y="0"/>
			<Anchor point="LEFT" x="0" y="0"/>
		</Anchors>
		<Frames>
			<Frame parentKey="lineContainer">
				<Size x="0" y="0" />
				<Anchors>
					<Anchor point="TOPLEFT" x="0" y="0" />
					<Anchor point="BOTTOMRIGHT" x="0" y="0" />
				</Anchors>
				<Layers>
					<Layer level="BACKGROUND">
						<Texture alphaMode="BLEND" file="Interface\ACHIEVEMENTFRAME\UI-Achievement-Title">
							<Anchors>
								<Anchor point="TOP" x="0" y="-1" />
								<Anchor point="BOTTOM" x="0" y="1" />
								<Anchor point="LEFT" x="0" y="0" />
								<Anchor point="RIGHT" x="0" y="0" />
							</Anchors>
							<TexCoords top="0.40625" bottom="0.60125" left="0" right="1" />
						</Texture>
					</Layer>
					<Layer level="OVERLAY">
						<FontString parentKey="Type" inherits="GameFontNormal" justifyH="RIGHT" text="[Line text]">
							<Size x="0" y="10" />
							<Anchors>
								<Anchor point="RIGHT" x="-15" y="0" />
							</Anchors>
							<Color r="0.95" g="0.95" b="0.95" />
						</FontString>
						<Texture parentKey="Icon">
							<Size x="30" y="0" />
							<Anchors>
								<Anchor point="TOP" x="0" y="0"/>
								<Anchor point="BOTTOM" x="0" y="0"/>
								<Anchor point="LEFT" x="25" y="0"/>
							</Anchors>
						</Texture>
						<FontString parentKey="Text" inherits="GameFontNormal" justifyH="LEFT" text="[Line text]">
							<Size x="0" y="10" />
							<Anchors>
								<Anchor point="LEFT" relativeKey="$parent.Icon" relativePoint="RIGHT" x="10" y="0" />
								<Anchor point="RIGHT" relativeKey="$parent.Type" relativePoint="LEFT" x="-15" y="0" />
							</Anchors>
							<Color r="0.95" g="0.95" b="0.95" />
						</FontString>
					</Layer>
				</Layers>
				<Frames>
					<Button parentKey="Expand">
						<Size x="13" y="13"/>
						<Anchors>
							<Anchor point="LEFT" x="3" y="0"/>
						</Anchors>
						<HitRectInsets>
							<AbsInset left="1" right="-4" top="-2" bottom="-2"/>
						</HitRectInsets>
						<NormalTexture file="Interface\Buttons\UI-PlusButton-UP">
							<Size x="16" y="16"/>
							<Anchors>
								<Anchor point="LEFT" x="3" y="0"/>
							</Anchors>
						</NormalTexture>
						<PushedTexture file="Interface\Buttons\UI-PlusButton-DOWN">
							<Size x="16" y="16"/>
							<Anchors>
								<Anchor point="LEFT" x="3" y="0"/>
							</Anchors>
						</PushedTexture>
						<HighlightTexture file="Interface\Buttons\UI-PlusButton-Hilight" alphaMode="ADD">
							<Size x="16" y="16"/>
							<Anchors>
								<Anchor point="LEFT" x="3" y="0"/>
							</Anchors>
						</HighlightTexture>
					</Button>
					<Button parentKey="Click" inherits="TRP3_InvisibleButton">
						<Anchors>
							<Anchor point="TOP" x="0" y="0"/>
							<Anchor point="BOTTOM" x="0" y="0"/>
							<Anchor point="RIGHT" x="0" y="0" relativeKey="$parent.Right"/>
							<Anchor point="LEFT" x="0" y="0" relativeKey="$parent.Text"/>
						</Anchors>
						<HighlightTexture alphaMode="ADD" file="Interface\FriendsFrame\UI-FriendsFrame-HighlightBar">
							<TexCoords bottom="0" left="0.25" top="1" right="1" />
						</HighlightTexture>
					</Button>
				</Frames>
			</Frame>
		</Frames>
	</Frame>

	<!-- *_*_*_*_*_*_*_*_*_*  -->
	<!--      Main frame      -->
	<!-- *_*_*_*_*_*_*_*_*_*  -->

	<Frame name="TRP3_Tools_ListTemplate" virtual="true">
		<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
			<EdgeSize><AbsValue val="24"/></EdgeSize>
			<TileSize><AbsValue val="380"/></TileSize>
			<BackgroundInsets><AbsInset left="5" right="5" top="5" bottom="5"/></BackgroundInsets>
		</Backdrop>

		<Frames>

			<!-- *_*_*_*_*_*_*_*_*_*_*_*  -->
			<!--   Right panel section    -->
			<!-- *_*_*_*_*_*_*_*_*_*_*_*  -->
			<Frame name="$parentSidePanel" parentKey="side" inherits="TRP3_FieldSetFrame">
				<Size>
					<RelDimension x="0.33" y="0"/>
				</Size>
				<Anchors>
					<Anchor point="TOP" x="0" y="-50"/>
					<Anchor point="LEFT" relativePoint="RIGHT" x="20" y="0"/>
					<Anchor point="RIGHT" relativeTo="TRP3_ToolFrame" x="-40" y="0"/>
					<Anchor point="BOTTOM" x="0" y="0"/>
				</Anchors>
			</Frame>

			<!-- *_*_*_*_*_*_*_*_*_*_*_*  -->
			<!--   Scroll frame section   -->
			<!-- *_*_*_*_*_*_*_*_*_*_*_*  -->
			<ScrollFrame name="$parentScrollFrame" parentKey="scroll" inherits="HybridScrollFrameTemplate">
				<Anchors>
					<Anchor point="TOP" x="0" y="-20"/>
					<Anchor point="RIGHT" x="0" y="0"/>
					<Anchor point="LEFT" x="0" y="0"/>
					<Anchor point="BOTTOM" x="0" y="20"/>
				</Anchors>
				<Frames>
					<Slider name="$parentScrollBar" inherits="HybridScrollBarTrimTemplate" parentKey="scrollBar">
						<Anchors>
							<Anchor point="TOPLEFT" relativePoint="TOPRIGHT" x="0" y="-7"/>
							<Anchor point="BOTTOMLEFT" relativePoint="BOTTOMRIGHT" x="0" y="0"/>
						</Anchors>
					</Slider>
				</Frames>
			</ScrollFrame>

		</Frames>
	</Frame>

	<Script file="list/list_new.lua"/>

</Ui>