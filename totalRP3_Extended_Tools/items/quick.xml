	<!-- *_*_*_*_*_*_*_*_*_*  -->
	<!--  Item quick editor   -->
	<!-- *_*_*_*_*_*_*_*_*_*  -->

	<Frame name="TRP3_ItemQuickEditor" inherits="TRP3_HoveredFrame" hidden="true">
		<Size x="500" y="350"/>

		<Layers>
			<Layer level="OVERLAY">
				<FontString parentKey="title" inherits="GameFontNormalLarge" justifyH="CENTER" justifyV="MIDDLE" setAllPoints="true">
					<Size x="0" y="30"/>
					<Anchors>
						<Anchor point="TOP" x="0" y="-10"/>
						<Anchor point="RIGHT" x="-10" y="0"/>
						<Anchor point="LEFT" x="10" y="0"/>
					</Anchors>
					<Color r="0.95" g="0.95" b="0.95" />
				</FontString>

				<FontString parentKey="display" inherits="GameFontNormal" justifyH="LEFT" justifyV="MIDDLE" setAllPoints="true">
					<Size x="0" y="16"/>
					<Anchors>
						<Anchor point="TOP" relativePoint="BOTTOM" relativeKey="$parent.title" x="0" y="-10"/>
						<Anchor point="RIGHT" x="-10" y="0"/>
						<Anchor point="LEFT" x="10" y="0"/>
					</Anchors>
					<Color r="0.95" g="0.95" b="0.95" />
				</FontString>

				<FontString parentKey="gameplay" inherits="GameFontNormal" justifyH="LEFT" justifyV="MIDDLE" setAllPoints="true">
					<Size x="0" y="16"/>
					<Anchors>
						<Anchor point="TOP" relativePoint="BOTTOM" relativeKey="$parent.display" x="0" y="-100"/>
						<Anchor point="RIGHT" x="-10" y="0"/>
						<Anchor point="LEFT" x="10" y="0"/>
					</Anchors>
					<Color r="0.95" g="0.95" b="0.95" />
				</FontString>
			</Layer>
		</Layers>

		<Frames>

			<!-- *_*_*_*_*_*_*_*_*_*  -->
			<!--  Form   -->
			<!-- *_*_*_*_*_*_*_*_*_*  -->

			<EditBox parentKey="name" inherits="TRP3_TitledHelpEditBox">
				<Size x="0" y="18"/>
				<Anchors>
					<Anchor point="TOPLEFT" x="10" y="-10" relativePoint="BOTTOMLEFT" relativeKey="$parent.display"/>
					<Anchor point="RIGHT" relativePoint="CENTER" x="-20" y="0"/>
				</Anchors>
			</EditBox>

			<Frame parentKey="quality" inherits="UIDropDownMenuTemplate" enableMouse="true" name="$parentQuality">
				<Anchors>
					<Anchor point="LEFT" relativePoint="RIGHT" relativeKey="$parent.name" x="6" y="-2"/>
					<Anchor point="RIGHT" x="-20" y="-2"/>
				</Anchors>
			</Frame>

			<EditBox parentKey="left" inherits="TRP3_TitledHelpEditBox">
				<Size x="0" y="18"/>
				<Anchors>
					<Anchor point="TOPLEFT" x="0" y="-10" relativePoint="BOTTOMLEFT" relativeKey="$parent.name"/>
					<Anchor point="RIGHT" relativePoint="CENTER" x="-20" y="0"/>
				</Anchors>
			</EditBox>

			<EditBox parentKey="right" inherits="TRP3_TitledHelpEditBox">
				<Size x="0" y="18"/>
				<Anchors>
					<Anchor point="LEFT" x="30" y="0" relativePoint="RIGHT" relativeKey="$parent.left"/>
					<Anchor point="RIGHT" x="-20" y="-2"/>
				</Anchors>
			</EditBox>

			<EditBox parentKey="description" inherits="TRP3_TitledHelpEditBox">
				<Size x="0" y="18"/>
				<Anchors>
					<Anchor point="TOPLEFT" x="0" y="-10" relativePoint="BOTTOMLEFT" relativeKey="$parent.left"/>
					<Anchor point="RIGHT" x="-20" y="0"/>
				</Anchors>
			</EditBox>

			<EditBox parentKey="value" inherits="TRP3_TitledHelpEditBox" numeric="true">
				<Size x="0" y="18"/>
				<Anchors>
					<Anchor point="TOPLEFT" x="10" y="-10" relativePoint="BOTTOMLEFT" relativeKey="$parent.gameplay"/>
					<Anchor point="RIGHT" relativePoint="CENTER" x="-20" y="0"/>
				</Anchors>
			</EditBox>

			<EditBox parentKey="weight" inherits="TRP3_TitledHelpEditBox" numeric="true">
				<Size x="0" y="18"/>
				<Anchors>
					<Anchor point="LEFT" x="30" y="0" relativePoint="RIGHT" relativeKey="$parent.value"/>
					<Anchor point="RIGHT" x="-20" y="-2"/>
				</Anchors>
			</EditBox>

			<Button parentKey="preview" inherits="TRP3_QuestButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeKey="$parent.value" x="10" y="-30"/>
				</Anchors>
			</Button>

			<!-- *_*_*_*_*_*_*_*_*_*  -->
			<!--  Widget  -->
			<!-- *_*_*_*_*_*_*_*_*_*  -->

			<Button parentKey="save" inherits="TRP3_CommonButton" text="SAVE">
				<Anchors>
					<Anchor point="BOTTOMLEFT" x="10" y="10"/>
				</Anchors>
			</Button>

			<Button parentKey="Close" inherits="UIPanelCloseButton">
				<Anchors>
					<Anchor point="TOPRIGHT" x="0" y="0"/>
				</Anchors>
				<Scripts>
					<OnClick>
						TRP3_ItemQuickEditor:Hide();
					</OnClick>
				</Scripts>
			</Button>

		</Frames>

	</Frame>

</Ui>