	<!-- *_*_*_*_*_*_*_*_*_*  -->
	<!--    General frame     -->
	<!-- *_*_*_*_*_*_*_*_*_*  -->

	<Frame name="TRP3_Tools_CutsceneEditorNormalTemplate" virtual="true">
		<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\GLUES\COMMON\TextPanel-Border" tile="true">
			<EdgeSize><AbsValue val="32"/></EdgeSize>
			<TileSize><AbsValue val="380"/></TileSize>
			<BackgroundInsets><AbsInset left="5" right="5" top="5" bottom="5"/></BackgroundInsets>
		</Backdrop>

		<Frames>

			<Frame parentKey="step" inherits="TRP3_EditorTitledFrame">
				<Size x="530" y="250"/>

				<Anchors>
					<Anchor point="TOPLEFT" x="10" y="-5"/>
					<Anchor point="BOTTOM" x="0" y="5"/>
				</Anchors>

				<Frames>

					<Frame parentKey="list" name="$parentList">

						<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\GLUES\COMMON\TextPanel-Border" tile="true">
							<EdgeSize><AbsValue val="32"/></EdgeSize>
							<TileSize><AbsValue val="380"/></TileSize>
							<BackgroundInsets><AbsInset left="5" right="5" top="5" bottom="5"/></BackgroundInsets>
						</Backdrop>

						<Anchors>
							<Anchor point="TOP" relativePoint="BOTTOM" relativeKey="$parent.title" x="0" y="-35"/>
							<Anchor point="RIGHT" x="-20" y="0"/>
							<Anchor point="LEFT" x="20" y="0"/>
							<Anchor point="BOTTOM" x="0" y="20"/>
						</Anchors>

						<Frames>

							<Button parentKey="add" inherits="TRP3_CommonButton">
								<Size x="150" y="20" />
								<Anchors>
									<Anchor point="BOTTOM" relativePoint="TOP" x="0" y="10"/>
								</Anchors>
							</Button>

							<Frame parentKey="line1" inherits="TRP3_Tools_QuestEditorObjectiveLine">
								<Anchors>
									<Anchor point="TOP" x="0" y="-15"/>
									<Anchor point="LEFT" x="10" y="0" />
									<Anchor point="RIGHT" x="-25" y="0" />
								</Anchors>
							</Frame>

							<Frame parentKey="line2" inherits="TRP3_Tools_QuestEditorObjectiveLine">
								<Anchors>
									<Anchor point="TOP" relativePoint="BOTTOM" relativeKey="$parent.line1" x="0" y="-10"/>
									<Anchor point="LEFT" x="10" y="0" />
									<Anchor point="RIGHT" x="-25" y="0" />
								</Anchors>
							</Frame>

							<Frame parentKey="line3" inherits="TRP3_Tools_QuestEditorObjectiveLine">
								<Anchors>
									<Anchor point="TOP" relativePoint="BOTTOM" relativeKey="$parent.line2" x="0" y="-10"/>
									<Anchor point="LEFT" x="10" y="0" />
									<Anchor point="RIGHT" x="-25" y="0" />
								</Anchors>
							</Frame>

							<Frame parentKey="line4" inherits="TRP3_Tools_QuestEditorObjectiveLine">
								<Anchors>
									<Anchor point="TOP" relativePoint="BOTTOM" relativeKey="$parent.line3" x="0" y="-10"/>
									<Anchor point="LEFT" x="10" y="0" />
									<Anchor point="RIGHT" x="-25" y="0" />
								</Anchors>
							</Frame>

							<Frame parentKey="line5" inherits="TRP3_Tools_QuestEditorObjectiveLine">
								<Anchors>
									<Anchor point="TOP" relativePoint="BOTTOM" relativeKey="$parent.line4" x="0" y="-10"/>
									<Anchor point="LEFT" x="10" y="0" />
									<Anchor point="RIGHT" x="-25" y="0" />
								</Anchors>
							</Frame>

							<Slider parentKey="slider" name="$parentSlider" inherits="OptionsSliderTemplate">
								<Size x="15" y="0" />
								<Anchors>
									<Anchor point="RIGHT" x="-7" y="0"/>
									<Anchor point="TOP" x="0" y="-2"/>
									<Anchor point="BOTTOM" x="0" y="6"/>
								</Anchors>
								<Scripts>
									<OnLoad>
										local name = self:GetName();
										_G[name .. "Text"]:SetText("");
										_G[name .. "High"]:SetText("");
										_G[name .. "Low"]:SetText("");
										self:SetMinMaxValues(0, 6);
										self:SetValueStep(1);
										self:SetOrientation("VERTICAL");
									</OnLoad>
								</Scripts>
							</Slider>
						</Frames>

					</Frame>

				</Frames>
			</Frame>

			<Frame parentKey="editor" inherits="TRP3_EditorTitledFrame" name="$parentEditor">
				<Anchors>
					<Anchor point="TOPRIGHT" x="-10" y="-5"/>
					<Anchor point="BOTTOMLEFT" relativePoint="BOTTOMRIGHT" relativeKey="$parent.step" x="0" y="0"/>
				</Anchors>

				<Frames>
					<Button parentKey="save" inherits="TRP3_CommonButton" text="SAVE">
						<Anchors>
							<Anchor point="BOTTOM" x="0" y="10"/>
						</Anchors>
					</Button>

					<Frame parentKey="text" inherits="TRP3_TextArea">
						<Size x="0" y="150"/>
						<Layers>
							<Layer level="OVERLAY">
								<FontString parentKey="title" inherits="GameFontNormalSmall" justifyH="LEFT">
									<Anchors>
										<Anchor point="TOPLEFT" x="10" y="12"/>
										<Anchor point="TOPRIGHT" x="0" y="12"/>
									</Anchors>
									<Color r="0.95" g="0.75" b="0.1"/>
								</FontString>
							</Layer>
						</Layers>
						<Anchors>
							<Anchor point="TOP" relativePoint="BOTTOM" relativeKey="$parent.title" x="0" y="-25"/>
							<Anchor point="RIGHT" x="-20" y="0"/>
							<Anchor point="LEFT" x="20" y="0"/>
						</Anchors>
					</Frame>
				</Frames>
			</Frame>

		</Frames>

	</Frame>


</Ui>